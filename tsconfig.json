{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"components/charts/*.js",
		"components/charts/chart.tsx",
		"app/(routes)/users/page.tsx",
		"components/edit_user/editUser.jsx",
		"components/home/icons/VerticalDotsIcon.jsx",
		"components/home/icons/SearchIcon.jsx"
	],
	"exclude": ["node_modules"]
}
